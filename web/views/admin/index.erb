<table>
  <tr>
    <th>ASIN</th>
    <th>title</th>
    <th>author</th>
    <th>book</th>
    <th>kindle</th>
    <th>rate</th>
  </tr>

<% items.each do |item| %>
  <tr>
    <td><a href="<%= url("dp/#{item.asin}") %>"><%= item.asin %></a></td>
    <td><a href="<%= item.details_url %>"><%= item.title[0..20] %></a></td>
    <td><%= item.author %></td>
    <td><%= item.formatted_book_price %></td>
    <td><%= price_color(item) %></td>
    <td><%= item.formatted_discount_rate %></td>
  </tr>
<% end %>

</table>