<table>
  <tr>
    <th>ASIN</th>
    <th>title</th>
    <th>author</th>
    <th>book</th>
    <th>kindle</th>
    <th>rate</th>
  </tr>

<% items.each do |item| %>
  <tr>
    <td><%= item.asin %></td>
    <td><a href="<%= item.details_url %>"><%= item.title[0..20] %></a></td>
    <td><%= item.author %></td>
    <td><%= item.formatted_book_price %></td>
    <td><%= item.formatted_kindle_price %></td>
    <td><%= item.discount_rate %></td>
  </tr>
<% end %>

</table>